---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Encrypter from "../components/Encrypter";
import Decrypter from "../components/Decrypter";

import '../styles/enc.css';
import '../styles/dec.css';
---

<Layout title="Twofish blockcipher">
	<main>
		<!-- <h1>Welcome to <span class="text-gradient">Astro</span></h1> -->

		<div class="link-card-grid">
			<Encrypter client:load client:only />
			<Decrypter client:load client:only />
		</div>

		<!-- <p class="instructions">
			To get started, open the directory <code>src/pages</code> in your project.<br
			/>
